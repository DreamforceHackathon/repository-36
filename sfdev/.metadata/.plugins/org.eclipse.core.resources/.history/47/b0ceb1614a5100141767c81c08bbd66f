@RestResource(urlMapping='/sfc/*')
global with sharing class SFC_External_Controller {

  
 
  
  @HttpPost
  global static String doPost(String username, string password) {
    	 
    Account result = [SELECT Id, sfc_token__ FROM Account WHERE sfc_username = :username and sfc_password = :password ];
    return '{}';
        
   }
}


